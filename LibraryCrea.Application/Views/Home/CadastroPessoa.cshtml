<form>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Matricula</label>
      <input type="email" class="form-control" id="Matricula" placeholder="Número de Mátricula">
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Nome</label>
      <input type="password" class="form-control" id="Nome" placeholder="Nome Pessoa">
    </div>
  </div>
  <div class="form-group">
    <label for="inputAddress">RG</label>
    <input type="text" class="form-control" id="RG" placeholder="Número RG">
  </div>
  <div class="form-group">
    <label for="inputAddress2">CPF</label>
    <input type="text" class="form-control" id="CPF" placeholder="Número CPF">
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputCity">Tipo</label>
      <input type="text" class="form-control" id="Tipo">
    </div>
    <div class="form-group col-md-4">
      <label for="inputState">Tipos</label>
      <select id="inputState" class="form-control">
        <option selected value="1">Autor</option>
        <option value="2">Profissional</option>
        <option value="3">Aluno</option>
        <option value="4">Outros</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" id="Ativo">
      <label class="form-check-label" for="gridCheck">
        Ativo?
      </label>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Cadastro</button>
  <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal">
      Usuários Cadastrados
</button>
</form>
<div id="UsuariosLista"></div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>


<script>
    $(document).ready(function() {
        $.ajax({
            url: 'Pessoa',
            type: 'Get',
            success: function (result) {
                $('#UsuariosLista').html(result);
            },
        });
    });
</script>